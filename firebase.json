{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8082
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5006
    },
    "ui": {
      "enabled": true,
      "port": 4501
    }
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/waitlist",
        "function": "waitlist"
      },
      {
        "source": "/api/helloOpenAI",
        "function": "helloOpenAI"
      },
      {
        "source": "/api/copywrite",
        "function": "copywrite"
      },
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/api/acceptCopy",
        "function": "acceptCopy"
      },
      {
        "source": "/api/requestReview",
        "function": "requestReview"
      }
    ]
  }
}
